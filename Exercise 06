BANK(Code,Name,Addr)
BANK_BRANCH(Branch_no,Addr,Code)
ACCOUNT(Acct_no,Balance,Type,Branch_no)
LOAN(Loan_no,Amount,Type,Branch_no)
CUSTOMER(San,Name,Phone,Addr)
CUSTOMER_ACCOUNT(Acct_no,San)
CUSTOMER_LOAN(Loan_no,San)


CREATE TABLE BANK(
Code VARCHAR(20) PRIMARY KEY,
Name VARCHAR(20),
Addr VARCHAR(100)
);

CREATE TABLE BANK_BRANCH(
Branch_no VARCHAR(20) PRIMARY KEY,
Addr VARCHAR(100),
Code VARCHAR(20),
FOREIGN KEY (Code) REFERENCES BANK (Code)
);

CREATE TABLE ACCOUNT(
Acct_no VARCHAR(20) PRIMARY KEY,
Balance FLOAT(10,2),
Type VARCHAR(20),
Branch_no VARCHAR(20),
FOREIGN KEY (Branch_no) REFERENCES BANK_BRANCH (Branch_no)
);

CREATE TABLE LOAN(
Loan_no VARCHAR(20) PRIMARY KEY,
Amount FLOAT(10,2),
Type VARCHAR(20),
Branch_no VARCHAR(20),
FOREIGN KEY (Branch_no) REFERENCES BANK_BRANCH (Branch_no)
);

CREATE TABLE CUSTOMER(
San VARCHAR(20) PRIMARY KEY,
Name VARCHAR(20),
Phone VARCHAR(10),
Addr VARCHAR(100)
);

CREATE TABLE CUSTOMER_ACCOUNT(
Acct_no VARCHAR(20),
San VARCHAR(20),
PRIMARY KEY(Acct_no,San),
FOREIGN KEY (Acct_no) REFERENCES ACCOUNT(Acct_no),
FOREIGN KEY (San) REFERENCES CUSTOMER(San)
);

CREATE TABLE CUSTOMER_LOAN(
Loan_no VARCHAR(20),
San VARCHAR(20),
PRIMARY KEY(Loan_no,San),
FOREIGN KEY (Loan_no) REFERENCES LOAN(Loan_no),
FOREIGN KEY (San) REFERENCES CUSTOMER(San)
);


DESCRIBE BANK;
DESCRIBE BANK_BRANCH;
DESCRIBE ACCOUNT;
DESCRIBE LOAN;
DESCRIBE CUSTOMER;
DESCRIBE CUSTOMER_ACCOUNT;
DESCRIBE CUSTOMER_LOAN;
